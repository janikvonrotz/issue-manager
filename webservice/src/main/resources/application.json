{
  "javax": {
    "persistence": {
      "jdbc": {
        "driver": "com.mysql.jdbc.Driver",
        "url": "jdbc:mysql://localhost/issuemanager",
        "user": "issuemanager",
        "password": "issuemanager"
      },
      "validation": {
      	"mode": "CALLBACK"
      }
    }
  },
  "eclipselink": {
    "logging": {
      "level": "off"
    },
    "ddl-generation": {
    	"value": "create-tables",
    	"output-mode": "database"
	}
  },
  "permissions": {
    "Person": {
    	"GET": ["Administrator","Sachbearbeiter", "Anonymous"],
    	"POST": ["Anonymous"],
    	"PUT": ["Sachbearbeiter"],
    	"DELETE": ["Authenticated"]
    },
    "User": {
    	"GET": ["Administrator","Sachbearbeiter", "Anonymous"],
    	"POST": ["Anonymous"],
    	"PUT": ["Sachbearbeiter", "Administrator"],
    	"DELETE": ["Authenticated"]
    },
    "Employer": {
    	"GET": ["Administrator","Sachbearbeiter"],
    	"POST": ["Anonymous"],
    	"PUT": ["Sachbearbeiter"],
    	"DELETE": ["Authenticated"]
    },
    "Project": {
    	"GET": ["Administrator","Sachbearbeiter"],
    	"POST": ["Anonymous"],
    	"PUT": ["Sachbearbeiter"],
    	"DELETE": ["Authenticated"]
    },
    "Comment": {
    	"GET": ["Administrator","Sachbearbeiter"],
    	"POST": ["Anonymous"],
    	"PUT": ["Sachbearbeiter"],
    	"DELETE": ["Authenticated"]
    },
    "seed": {
    	"Arbeitstyp": ["Neubau", "Umbau", "Renovation", "Teil-Renovation"],
    	"Mangelstatus": ["offen", "erledigt", "zur Kontrolle"],
    	"Projekttyp": ["Einfamilienhaus", "Mehrfamilienhaus", "Wohnung", "Garage", "Gartenhaus"],
    	"Ort": "Ortschaften.csv",
    	"Rolle": ["Administrator", "Sachbearbeiter", "Bauleiter", "Bauherr", "Kontaktperson", "Kontaktadmin"] 	
    }
  }
}